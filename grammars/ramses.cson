"fileTypes": [
    "rad"
]

"name": "Ramses"
"scopeName": "source.text"

"patterns": [
    {
        "match": ";.*$"
        "name": "comment.line"
    }
    {
        "match": "^\\s*([A-Za-z\\$\\._\\?][0-9A-Za-z_\\$\\#@~\\.\\?]*)\\s*:"
        "name": "entity.name.function.label"
    }
    {
        "match": "(?i)\\b(STR|LDR|HLT)"
        "name": "keyword.mnemonic"
    }
    {
        "match": "(?i)\\b(ADD|OR|AND|NOT|SUB|NEG|SHR)"
        "name": "keyword.operator"
    }
    {
        "match": "(?i)\\b(JMP|JN|JZ|JC|JSR)"
        "name": "keyword.control"
    }
    {
        "match": "(?i)\\b(\s[ABX]\s)"
        "name": "variable.register"
    }
    {
        "match": "(#[0-9]+)"
        "name": "constant.numeric"
    }
    {
        "match": "([0-9]+)"
        "name": "storage"
    }
]
